<% layout("./layouts/boilerplate.ejs") %>

    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Edit your Listing</h3>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">title Looks Good!</div>                                   <!-- for valid data input  -->
                    <div class="invalid-feedback">please enter correct title</div> 
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" cols="30" rows="10" required
                        class="form-control"> <%= listing.description %> </textarea>
                    <div class="valid-feedback">description Looks Good!</div>                                   <!-- for valid data input  -->
                    <div class="invalid-feedback">please enter correct description</div> 
                </div>
                <div class="mb-3">
                    <h5>Original Listing Image</h5>
                    <img src="<%= originalImageUrl %>" alt="">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" name="listing[image]" value="<%= listing.image %>" class="form-control" >
                    <div class="valid-feedback">Image Looks Good!</div>                                   <!-- for valid data input  -->
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                        <div class="valid-feedback">Price Looks Good!</div>                                   <!-- for valid data input  -->
                        <div class="invalid-feedback">please enter correct price</div> 
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                        <div class="valid-feedback">location Looks Good!</div>                                   <!-- for valid data input  -->
                        <div class="invalid-feedback">please enter correct location</div> 
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                    <div class="valid-feedback">country Looks Good!</div>                                   <!-- for valid data input  -->
                        <div class="invalid-feedback">please enter correct country</div> 
                </div>
                <br>
                <button class="btn btn-dark edit-btn">save edit</button>
            </form>
        </div>
    </div>